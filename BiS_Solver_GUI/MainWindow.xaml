<Window x:Class="BiS_Solver_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BiS_Solver_GUI"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Closed="MainWindow_OnClosed"
        Title="BiS Solver GUI" Height="217" Width="535" ResizeMode="NoResize">
    <Window.Resources>
        <DataTemplate x:Key="cmbJobTemplate">
            <StackPanel>
                <Image Width="20" Height="20" Source="{Binding JobIcon}" />
                <TextBlock Text="{Binding JobName}" Foreground="{Binding JobColor}" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Label Content="Job:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,12,0,0" Width="40"/>
        <ComboBox x:Name="cmbJobs" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="45,13,0,0">
            <ComboBox.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}">LightGray</SolidColorBrush>
            </ComboBox.Resources>
            <ComboBoxItem x:Name="PLD">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/BiS_Solver_GUI;component/JobIcons/pld.png" Width="20" Height="20"/>
                    <TextBlock Foreground="DodgerBlue">PLD</TextBlock>
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem x:Name="WAR">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/BiS_Solver_GUI;component/JobIcons/war.png" Width="20" Height="20"/>
                    <TextBlock Foreground="DodgerBlue">WAR</TextBlock>
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem x:Name="DRK">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/BiS_Solver_GUI;component/JobIcons/drk.png" Width="20" Height="20"/>
                    <TextBlock Foreground="DodgerBlue">DRK</TextBlock>
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem x:Name="WHM">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/BiS_Solver_GUI;component/JobIcons/whm.png" Width="20" Height="20"/>
                    <TextBlock Foreground="Green">WHM</TextBlock>
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem x:Name="SCH">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/BiS_Solver_GUI;component/JobIcons/sch.png" Width="20" Height="20"/>
                    <TextBlock Foreground="Green">SCH</TextBlock>
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem x:Name="AST">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/BiS_Solver_GUI;component/JobIcons/ast.png" Width="20" Height="20"/>
                    <TextBlock Foreground="Green">AST</TextBlock>
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem x:Name="DRG">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/BiS_Solver_GUI;component/JobIcons/drg.png" Width="20" Height="20"/>
                    <TextBlock Foreground="DarkRed">DRG</TextBlock>
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem x:Name="NIN">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/BiS_Solver_GUI;component/JobIcons/nin.png" Width="20" Height="20"/>
                    <TextBlock Foreground="DarkRed">NIN</TextBlock>
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem x:Name="MNK">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/BiS_Solver_GUI;component/JobIcons/mnk.png" Width="20" Height="20"/>
                    <TextBlock Foreground="DarkRed">MNK</TextBlock>
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem x:Name="MCH">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/BiS_Solver_GUI;component/JobIcons/mch.png" Width="20" Height="20"/>
                    <TextBlock Foreground="DarkRed">MCH</TextBlock>
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem x:Name="BRD">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/BiS_Solver_GUI;component/JobIcons/brd.png" Width="20" Height="20"/>
                    <TextBlock Foreground="DarkRed">BRD</TextBlock>
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem x:Name="SMN">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/BiS_Solver_GUI;component/JobIcons/smn.png" Width="20" Height="20"/>
                    <TextBlock Foreground="DarkRed">SMN</TextBlock>
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem x:Name="BLM">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/BiS_Solver_GUI;component/JobIcons/blm.png" Width="20" Height="20"/>
                    <TextBlock Foreground="DarkRed">BLM</TextBlock>
                </StackPanel>
            </ComboBoxItem>
        </ComboBox>
        <CheckBox x:Name="chkRelic" Content="Use Anima?" ToolTip="Anima weapon will always be BiS." HorizontalAlignment="Left" Margin="180,17,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="chkSSTiers" IsChecked="True" Content="Use SS Tiers?" ToolTip="Calculate using SS tiering." HorizontalAlignment="Left" VerticalAlignment="Top" Margin="262,17,0,0"/>
        <CheckBox x:Name="chkFood" Content="Use food?" ToolTip="Accuracy on food can change your BiS, but you'll have to use food to meet ACC caps." HorizontalAlignment="Left" VerticalAlignment="Top" Margin="351,17,0,0"/>
        <Button x:Name="btnXIVDB" Content="XIVDB" HorizontalAlignment="Left" VerticalAlignment="Top" Width="46" Margin="463,12,0,0" Click="btnXIVDB_Click"/>
        <StackPanel HorizontalAlignment="Left" Height="128" VerticalAlignment="Top" Width="155" Margin="10,43,0,0">
            <Label Content="Include Savage gear up to:"/>
            <RadioButton x:Name="optLimitAll" GroupName="SavageTurns" Content="None (exclude all gear)" Margin="0,0,0,0"/>
            <RadioButton x:Name="optA9S" GroupName="SavageTurns" Content="A9S (rightside, belt)" Margin="0,5,0,0"/>
            <RadioButton x:Name="optA10S" GroupName="SavageTurns" Content="A10S (head, gloves, boots)" Margin="0,5,0,0"/>
            <RadioButton x:Name="optA11S" GroupName="SavageTurns" Content="A11S (pants)" Margin="0,5,0,0"/>
            <RadioButton x:Name="optNoLimit" GroupName="SavageTurns" Content="No limit (include all gear)" Margin="0,5,0,0"/>

        </StackPanel>
        <Label Content="Exclude specific IDs:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="187,43,0,0"/>
        <TextBox x:Name="txtExcludeIDs" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="208" Margin="301,43,0,0"/>
        <Label Content="Include specific IDs:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="187,74,0,0"/>
        <TextBox x:Name="txtIncludeIDs" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="208" Margin="301,74,0,0">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Style.Resources>
                        <VisualBrush x:Key="CueBannerBrush" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                            <VisualBrush.Visual>
                                <Label Content="Example: 16478 16480" Foreground="LightGray" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Style.Resources>
                    <Style.Triggers>
                        <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                            <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                        </Trigger>
                        <Trigger Property="Text" Value="{x:Null}">
                            <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter Property="Background" Value="White" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>

        <Button x:Name="btnChangeGamePath" Content="Change game path" HorizontalAlignment="Left" Margin="221,152,0,0" VerticalAlignment="Top" Width="116" Click="btnChangeGamePath_Click"/>
        <TextBox x:Name="txtGamePath" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="288" Margin="221,129,0,0"/>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="426,152,0,0" VerticalAlignment="Top" Width="83" Click="btnStart_Click"/>
    </Grid>
</Window>
